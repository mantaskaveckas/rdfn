{% extends 'base.html.twig' %}

{% block body %}
    <h1>CV</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cV.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ cV.title }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ cV.url }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{% if cV.createdat %}{{ cV.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Full_name</th>
                <td>{{ cV.fullname }}</td>
            </tr>
            <tr>
                <th>Occupation</th>
                <td>{{ cV.occupation }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ cV.location }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ cV.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ cV.email }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ cV.summary }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cv_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cv_edit', { 'id': cV.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('workexperience_new', { 'id': cV.id }) }}">add work experience</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
