{% extends 'base.html.twig' %}

{% block body %}
    <h1>WorkExperience list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Begin</th>
                <th>End</th>
                <th>Position</th>
                <th>Company</th>
                <th>About</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for workExperience in workExperiences %}
            <tr>
                <td><a href="{{ path('workexperience_show', { 'id': workExperience.id }) }}">{{ workExperience.id }}</a></td>
                <td>{% if workExperience.begin %}{{ workExperience.begin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if workExperience.end %}{{ workExperience.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ workExperience.position }}</td>
                <td>{{ workExperience.company }}</td>
                <td>{{ workExperience.about }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('workexperience_show', { 'id': workExperience.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('workexperience_edit', { 'id': workExperience.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('workexperience_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
